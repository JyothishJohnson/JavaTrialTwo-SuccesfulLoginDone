<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.javatrialtwo">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            tools:replace="android:theme" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".Home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2">

        </activity>
        <activity
            android:name=".Basic"
            android:label="@string/basic_concepts"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ArraysTopic"
            android:label="@string/basic_concepts"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ControlStatements"
            android:label="@string/control_statements"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ClassesAndObjects"
            android:label="@string/classes_and__objects"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoreOnClasses"
            android:label="@string/moreonclasses"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Exceptions"
            android:label="@string/exceptions"
            android:screenOrientation="portrait" />
        <activity android:name=".Explain">

        </activity>
        <activity android:name=".ForumActivity"
            android:theme="@style/AppTheme2">

        </activity>
    </application>

</manifest>