<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.android.javatrialtwo.Home">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/b1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-medium"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="8.9" />

        <TextView
            android:layout_below="@+id/b1"
            android:layout_width="wrap_content"
            android:id="@+id/t1"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:text="Basic Concepts"/>

        <TextView
            android:id="@+id/b2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/t1"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="8.9" />

        <TextView
            android:id="@+id/b3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/t1"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="8.9" />
        <TextView
            android:layout_below="@+id/b3"
            android:layout_width="wrap_content"
            android:id="@+id/t3"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:text="@string/arrays"/>

        <TextView
            android:id="@+id/b4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:clickable="true"
            android:layout_below="@+id/t2"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"

            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="8.9" />
        <TextView
            android:layout_below="@+id/b4"
            android:layout_width="wrap_content"
            android:id="@+id/t4"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_height="wrap_content"
            android:textColor="#000"

            android:text="Classes and Objects"/>
        <TextView
            android:id="@+id/b5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/t3"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="8.9" />

        <TextView
            android:layout_below="@+id/b5"
            android:layout_width="wrap_content"
            android:id="@+id/t5"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:text="More on Classes"/>
        <TextView
            android:id="@+id/b6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/t5"
            android:clickable="true"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_centerHorizontal="true"

            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="8.9" />
        <TextView
            android:layout_below="@+id/b6"
            android:layout_width="wrap_content"
            android:id="@+id/t6"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_centerHorizontal="true"
            android:text="Exceptions,Lists,\nThreads and Files"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/t2"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="@string/control_statements"
            android:layout_below="@+id/b2"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/b7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/t6"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="8.9" />

        <TextView
            android:layout_below="@+id/b7"
            android:layout_width="wrap_content"
            android:id="@+id/t7"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_centerHorizontal="true"
            android:text="Online Forum"/>


    </RelativeLayout>

</ScrollView>

</RelativeLayout>

