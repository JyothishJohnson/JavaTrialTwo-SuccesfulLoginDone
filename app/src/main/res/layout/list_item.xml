<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_explain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#619191"
    tools:context="com.example.android.javatrialtwo.Explain">


<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_analysis"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#bcd7dc"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:padding="5dp"
    card_view:cardCornerRadius="5dp" >



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/Widget.CardContent"
    android:id="@+id/l1"
    android:clickable="false"
    android:padding="16dp"
    android:descendantFocusability="blocksDescendants"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/topicname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textColorHint="#000"
        tools:text="Topicname"
        tools:textColor="#000" />

    <TextView
        android:id="@+id/totalTopics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        tools:text="1/12"
        android:textColorHint="#000"

        android:clickable="false"
        android:focusable="false"
        tools:textColor="#000"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:layout_above="@+id/questions"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />




    <TextView
        android:id="@+id/questions"
        android:textColorHint="#000"

        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="top"
        tools:textColor="#000"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        tools:text="1 Questions"
        android:textSize="14sp"
        android:layout_below="@+id/topicname"
        android:layout_alignParentStart="true" />



</RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

